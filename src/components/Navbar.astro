---
import { Icon } from "astro-icon";

const contact = [
    {
        name: "Github",
        link: "https://github.com/AyushSehrawat",
    },
    {
        name: "Linkedin",
        link: "https://www.linkedin.com/in/ayushsehrawat",
    },
    {
        name: "Twitter",
        link: "https://twitter.com/mini5183",
    },
    {
        name: "Discord",
        link: "https://discordapp.com/users/727365670395838626",
    },
];
---

<header class="w-full p-10 md:px-24 lg:px-32 font-varela-round items-center">
    <nav class="flex justify-between w-full items-center">
        <div class="text-4xl md:text-5xl text-ctp-text font-sacramento">
            Ayush Sehrawat
        </div>
        <div class="hidden md:flex gap-2 items-center">
            {
                contact.map((item) => (
                    <a
                        class="px-4 py-2 bg-ctp-maroon flex items-center rounded-xl text-ctp-base hover:bg-ctp-red transition duration-300 ease-in-out"
                        href={item.link}
                    >
                        <Icon name={item.name} height="24" width="24" />
                    </a>
                ))
            }
        </div>
        <div
            class="flex flex-col md:hidden items-center px-4 py-2 bg-ctp-maroon rounded-xl text-ctp-base"
        >
            <Icon name="Hamburger" height="24" width="24" />
        </div>
    </nav>
</header>
